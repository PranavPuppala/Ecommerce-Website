generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("PRISMA_DB_URL")
}

model Product {
    id          String  @id @default(uuid())
    name        String
    description String
    price       Float
    quantity    Int
    category    String
    rating      Float   @default(0)
    //specificationId String?        @unique
    //specs           Specification? @relation(fields: [specificationId], references: [id])
    isOnSale    Boolean @default(false)
    imageUrl    String?
    orderId     String?
    order       Order?  @relation(fields: [orderId], references: [id])
}

