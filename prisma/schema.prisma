model User {
    id     String  @id @default(uuid())
    email  String  @unique
    orders Order[]
}

model Order {
    id         String    @id @default(uuid())
    totalPrice Float
    userId     String
    user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
    products   Product[]
}
